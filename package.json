{
  "name": "runo",
  "version": "0.0.0",
  "description": "Simplifies the process of running command line scripts, similar to npm scripts but for any type of project.",
  "main": "./bin/main.js",
  "bin": {
    "runo": "./bin/main.js"
  },
  "scripts": {
    "dev": "rollup -c -w",
