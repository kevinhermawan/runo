  "devDependencies": {
    "@rollup/plugin-json": "^6.0.0",
    "@types/node": "^18.11.18",
    "esbuild": "^0.17.5",
    "rimraf": "^4.1.2",
    "rollup": "^3.13.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "rome": "^11.0.0",
    "typescript": "^4.9.5"
